<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.hnit.video.auth.mapper.PermissionMapper">

    <resultMap id="permissionMap" type="com.hnit.video.model.entity.auth.Permission">
        <result property="id" column="id"/>
        <result property="pid" column="pid"/>
        <result property="name" column="name"/>
        <result property="type" column="type"/>
        <result property="permissionValue" column="permission_value"/>
        <result property="path" column="path"/>
        <result property="component" column="component"/>
        <result property="redirect" column="redirect"/>
        <result property="icon" column="icon"/>
        <result property="hidden" column="hidden"/>
        <result property="sort" column="sort"/>
        <result property="isEnable" column="is_enable"/>
        <result property="createTime" column="create_time"/>
        <result property="updateTime" column="update_time"/>
    </resultMap>

    <!-- 根据用户id获取权限列表 -->
    <select id="selectPermissionListByUserId" resultMap="permissionMap">
        select p.id,
               p.pid,
               p.name,
               p.type,
               p.permission_value,
               path,
               p.component,
               p.redirect,
               p.icon,
               p.hidden,
               p.sort,
               p.is_enable,
               p.create_time,
               p.update_time
        from auth_user_role ur
                 inner join auth_role_permission rp on rp.role_id = ur.role_id
                 inner join auth_permission p on p.id = rp.permission_id
        where ur.user_id =
              #{userId}
          and p.is_enable = 1
          and rp.is_enable = 1
          and ur.is_enable = 1
        order by p.sort
    </select>

    <!-- 获取所有的权限值 -->
    <select id="selectAllPermissionValue" resultType="java.lang.String">
        select permission_value
        from auth_permission
        where type = 2
          and is_enable = 1
    </select>

    <!-- 根据用户id获取权限值 -->
    <select id="selectPermissionValueByUserId" resultType="java.lang.String">
        select distinct p.permission_value
        from auth_user_role ur
                 inner join auth_role_permission rp on rp.role_id = ur.role_id
                 inner join auth_permission p on p.id = rp.permission_id
        where ur.user_id = #{userId}
          and p.type = 2
          and p.is_enable = 1
          and ur.is_enable = 1
          and rp.is_enable = 1
    </select>
</mapper>
